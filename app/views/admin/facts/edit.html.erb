<div class="page-header">
  <h1>Editing <%= @fact.name %> <small>Version 1</small></h1>
</div>

<%= form_for @fact, :url => admin_fact_path(@fact), :method => 'put', :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <div class="control-group"> 
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'input-large' %>
      </div>    
    </div>
    <div class="control-group">
      <%= f.label :slug, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :slug %>
      </div>    
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => 8 %>
      </div>    
    </div>
    <div class="control-group">
      <%= f.label :value, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :value, :rows => 5 %>
      </div>    
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit :class => 'btn btn-success' %>
      </div>
    </div>
  </fieldset>
<% end %>
