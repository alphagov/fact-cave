<h2>Facts</h2>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Value</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @facts.each do |fact| %>
      <tr>
        <td><%= fact.name %></td>
        <td><%= fact.slug %></td>
        <td><%= fact.value %></td>
        <td class="controls">
          <%= link_to "Edit", edit_admin_fact_path(fact.to_param), :class => 'btn btn-primary' %>
          <%= button_to "Delete", admin_fact_path(fact.to_param), 
            :confirm => "Permanently delete '#{fact.name}'?", :method => :delete, :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Fact", new_admin_fact_path, :class => 'btn btn-success' %>
