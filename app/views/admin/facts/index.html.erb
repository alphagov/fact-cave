<h2>Facts</h2>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Fact</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @facts.each do |fact| %>
      <tr>
        <td><%= fact.name %></td>
        <td><%= link_to "Edit", edit_admin_fact_path(fact.to_param), :class => 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
